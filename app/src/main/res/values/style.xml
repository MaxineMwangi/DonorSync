<resources>
    <style name="FormLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="FormInputSingleLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FormInputMultiLine" parent="FormInputSingleLine">
        <item name="android:minLines">3</item>
        <item name="android:gravity">top|start</item>
    </style>

    <style name="Theme.donorsync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/primary_light</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="Theme.donorsync.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RoundedTextInput" parent="">
        <item name="cornerSize">8dp</item>
    </style>

</resources>
