<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for splash screen -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Set your background image for the splash screen -->
        <item name="android:windowBackground">@drawable/strathmore</item> <!-- Replace with your splash image -->
    </style>

    <!-- Theme without action bar for splash screen -->
    <style name="Theme.SplashScreen.NoActionBar" parent="Theme.SplashScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DonorSync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/maroon</item>
        <item name="colorPrimaryVariant">@color/maroon_dark</item>
        <item name="colorSecondary">@color/red</item>
        <item name="android:statusBarColor">@color/maroon_dark</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- Other overlay themes for customization -->
    <style name="Theme.SplashScreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SplashScreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
